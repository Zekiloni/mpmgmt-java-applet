CREATE TABLE mobile_plans (ID BIGINT AUTO_INCREMENT NOT NULL, CREATED_AT DATETIME, DATA_LIMIT INTEGER, DESCRIPTION VARCHAR(255), MINUTES_LIMIT INTEGER, MONTHLY_FEE DOUBLE, NAME VARCHAR(255) UNIQUE, PRIMARY KEY (ID))
CREATE TABLE customers (ID BIGINT AUTO_INCREMENT NOT NULL, CREATEDAT DATETIME, DATEOFBIRTH DATE, EMAILADDRESS VARCHAR(255), FIRSTNAME VARCHAR(255), LASTNAME VARCHAR(255), MIDDLENAME VARCHAR(255), PHONENUMBER VARCHAR(255), UPDATEDAT DATETIME, PRIMARY KEY (ID))
CREATE TABLE SUBSCRIPTION (ID BIGINT AUTO_INCREMENT NOT NULL, VALIDFROM DATE, VALIDTO DATE, customer_id BIGINT, mobile_plan_id BIGINT, PRIMARY KEY (ID))
ALTER TABLE SUBSCRIPTION ADD CONSTRAINT FK_SUBSCRIPTION_customer_id FOREIGN KEY (customer_id) REFERENCES customers (ID)
ALTER TABLE SUBSCRIPTION ADD CONSTRAINT FK_SUBSCRIPTION_mobile_plan_id FOREIGN KEY (mobile_plan_id) REFERENCES mobile_plans (ID)
